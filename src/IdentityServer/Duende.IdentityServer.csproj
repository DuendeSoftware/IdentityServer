    <ItemGroup>
        <Compile Include="..\Telemetry\Tracing.cs">
            <Link>Tracing.cs</Link>
        </Compile>
        <Compile Include="..\Telemetry\Telemetry.cs">
            <Link>Telemetry.cs</Link>
        </Compile>
    </ItemGroup>
    
</Project>